- @data.each do |office_name, users|
  %h2= office_name

  %table
    %thead
      %tr
        %th Name
        %th Email
        %th Role
        %th Invitation Status
        %th Active Status
        %th Edit
    %tbody
      - users.each do |user|
        %tr
          %td= user
          %td= user.email
          %td= user.role_display
          %td= user.invitation_accepted_at ? 'Accepted' : 'Not yet accepted'
          %td= user.status.humanize
          %td= link_to 'Edit', edit_user_registration_path(user)